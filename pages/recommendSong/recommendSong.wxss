/* pages/recommendSong/recommendSong.wxss */

.recommendSongContainer .header{
    position: relative;
    width: 100%;
    height: 300rpx;
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}
.recommendSongContainer .header .date{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.recommendSongContainer .header .date .day{
    font-size: 52rpx;
}

.listContainer .listHeader{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: #fff;

}
.listContainer .listHeader{
    height: 80rpx;
    line-height: 80rpx;

}
 
.listContainer .listHeader .changeMore{
    float: right;
}

.listScroll{
    height: calc(100vh -  380rpx);

}

.listScroll .scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
}

.listScroll .scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.listScroll .scrollItem .musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
  
}

.listScroll .scrollItem .musicInfo text{
    max-width: 500rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.listScroll .scrollItem .iconfont{
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    right: 0;
    text-align: center;
}
/* pages/index.wxss */
.indexContainer {}

.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%x;
}

.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem text {
    font-size: 30rpx;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240, 19, 19);
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}


.recommendContainer {
    padding: 20rpx;
}


.recommendContainer .recommendScroll {
    display: flex;
    height: 300rpx;
}

.recommendContainer .scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.recommendContainer image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.recommendContainer .scrollItem text {
    font-size: 22rpx;
    /* 单行文本溢出隐藏 */
    /* display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */

    /* 多行文本溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* 设置对齐模式*/
    -webkit-line-clamp: 2;
    /*设置行数 */


}

.topList{
    padding: 20rpx;
}

.TopListSwiper{
   height:  430rpx;
}

.TopListSwiper swiper-item{
    width: 96%;
    background-color: #fbfbfb;
}

.TopListSwiper swiper-item .title{
    font-size: 30rpx;
    line-height: 80rpx;
}

.TopListSwiper swiper-item .musicItem{
    display: flex;
    margin-bottom: 20rpx;
}

.TopListSwiper swiper-item .musicItem image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 20rpx;
}

.TopListSwiper swiper-item .musicItem .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.TopListSwiper swiper-item .musicItem .musicName{
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}